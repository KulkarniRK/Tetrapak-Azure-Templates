{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
   "parameters": {
     "projectName": {
            "type": "string",
             "defaultValue": "tptest",
            "metadata": {
                "description": "project Name"
            },
            "minLength":1,
            "maxLength":25             
        },
      "storageAccountType": {
        "type": "string",
        "defaultValue": "Standard_LRS",
        "allowedValues": [
          "Standard_LRS",
          "Standard_GRS",
          "Standard_ZRS",
          "Premium_LRS"
        ],
        "metadata": {
          "description": "Storage Account type"
        }
      }          
    },
  "variables": {
     "linked-template-storage": "https://raw.githubusercontent.com/ShambhurajeTP/Tetrapak-Azure-Templates/main/artifacts/linkedStorageAccount.json",
     "linked-template-appservice": "https://raw.githubusercontent.com/ShambhurajeTP/Tetrapak-Azure-Templates/main/artifacts/linkedAppService.json"  
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "linkedStorageAccount",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('linked-template-storage')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
            "projectName": { "value": "[parameters('projectName')]" },
            "storageAccountType": { "value": "[parameters('storageAccountType')]" }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "linkedAppService",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
           "uri": "[variables('linked-template-appservice')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
            "projectName": { "value": "[parameters('projectName')]" }           
        }
      }
    }         
  ],
  "outputs": {
    
  }
}
